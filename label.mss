#transportation_name[zoom>=12][class='motorway'],
#transportation_name[zoom>=14][class=~'trunk|primary|secondary|tertiary'],
#transportation_name[zoom>=16] {
  text-name: '[name]';
  text-face-name: 'Source Sans Pro Regular';
  text-fill: #000;
  text-placement: line;
  text-avoid-edges: true;
  text-halo-fill: #fff;
  text-halo-radius: 2;
  text-size: 16;
}

